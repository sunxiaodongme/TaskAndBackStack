<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/go_standard_two"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="启动StandardTwo"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/go_singletop_one"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="启动SingleTopOne"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/go_singletask_one"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="启动SingleTaskOne"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/go_singleinstance_one"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="启动SingleInstanceOne"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>